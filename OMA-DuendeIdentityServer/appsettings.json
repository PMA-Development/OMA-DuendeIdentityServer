{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Clients": [
    {
      "ClientId": "oidcClient",
      "ClientName": "Example Client Application",
      "ClientSecrets": [
        {
          "Value": "SuperSecretPassword"
        }
      ],
      "AllowedGrantTypes": [ "authorization_code" ],
      "RedirectUris": [ "https://localhost:7176/signin-oidc" ],
      "AllowedScopes": [
        "openid",
        "profile",
        "email",
        "role",
        "api1.read"
      ],
      "RequirePkce": true,
      "AllowPlainTextPkce": false
    }
  ]
}

