@page "{id:int}"
@model OMA_DuendeIdentityServer.Pages.ClientManagement.EditModel
@{
}

<h1>Edit Client</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Client.ClientId"></label>
        <input asp-for="Client.ClientId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Client.ClientName"></label>
        <input asp-for="Client.ClientName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Client.RedirectUris"></label>
        <input asp-for="Client.RedirectUris" class="form-control" />
    </div>
    <!-- Add more fields as needed -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>